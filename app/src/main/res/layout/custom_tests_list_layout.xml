<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/titleTests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:text="@string/titleTests"
        android:textSize="18sp"
        android:textColor="#b5000000"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/testTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/titleTests"
        android:layout_toEndOf="@+id/titleTests"
        android:layout_centerVertical="true"
        android:paddingRight="6dp"
        android:paddingLeft="6dp"
        android:textSize="16sp"
        android:textColor="#FF0000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/testDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/testTotal"
        android:layout_toEndOf="@+id/testTotal"
        android:layout_centerVertical="true"
        android:paddingRight="6dp"
        android:paddingLeft="6dp"
        android:textSize="16sp"
        android:textColor="#FF0000"
        android:textStyle="bold" />


    <Button
        android:id="@+id/testDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/testDate"
        android:layout_toEndOf="@+id/testDate"
        android:textColor="#b50817ef"
        android:paddingRight="4dp"
        android:paddingLeft="4dp"
        style="?android:attr/borderlessButtonStyle"
        android:text="@string/testNortonDetail" />

</RelativeLayout>