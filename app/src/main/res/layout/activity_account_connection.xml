<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titre"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:gravity="center"
        android:text="@string/titreConnexion"
        android:textStyle="bold"
        android:textColor="#006699"
        android:textSize="20sp"/>

    <TableLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="2">

        <TableRow>
            <TextView
                android:id="@+id/identifiantConnection"
                android:text="@string/identifiant"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <EditText
                android:id="@+id/identifiantConnectionInput"
                android:hint="@string/identifiantInput" />
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/passwordConnection"
                android:text="@string/password"
                android:textStyle="bold"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/passwordConnectionInput"
                android:inputType="textPassword"
                android:hint="@string/passwordInput" />
        </TableRow>

        <TextView
            android:id="@+id/pasInscrit"
            android:paddingTop="20dp"
            android:gravity="center"
            android:text="@string/pasInscrit"
            android:textColor="#0000FF"
            android:clickable="true"/>

        <TableRow>
            <LinearLayout
                android:paddingTop="25dp"
                android:layout_span="2"
                android:gravity="center">
                <Button
                    android:id="@+id/send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/send"/>
                <Button
                    android:id="@+id/raz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/raz"/>
            </LinearLayout>
        </TableRow>
    </TableLayout>
</LinearLayout>